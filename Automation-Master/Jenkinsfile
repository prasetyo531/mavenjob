pipeline {
    agent any
	tools { 
        maven 'MAVEN_HOME' 
        jdk 'JAVA_HOME' 
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                ''' 
            }
        }

       stage ('Build') {
            steps {
		sh 'cd /Users/mac/.jenkins/workspace/pipeline-script@script'
		sh 'mvn install:install-file -Dfile=/Users/mac/Documents/Automation/mavenjob/Automation-Master/pipelinemaven.jar'
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml' 
                }
            }
        }
    }
}